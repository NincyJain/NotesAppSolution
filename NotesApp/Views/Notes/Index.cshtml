@model List<NotesApp.Models.Note>

<h2>My Notes</h2>


<form method="get" action="/Notes/Search" class="mb-4">
    <div class="input-group">
        <input type="text" id="searchBox" class="form-control" placeholder="Search notes..." />

    </div>
</form>


<a class="btn btn-success mb-3" href="/Notes/AddNotes">Add New Note</a>

@if (Model == null || !Model.Any())
{
    <p>No notes yet.</p>
}




<div id="notesContainer">
    @await Html.PartialAsync("_NotesList", Model)
</div>



<!-- EDIT NOTE MODAL -->
<div class="modal fade" id="editNoteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="editNoteForm">

                    <input type="hidden" name="Id" id="Edit_Id"/>

                    <div class="form-group">
                        <label>Title</label>
                        <input id="Edit_Title" class="form-control" />
                    </div>

                    <div class="form-group mt-3">
                        <label>Description</label>
                        <textarea id="Edit_Description" class="form-control"></textarea>
                    </div>

                    <div class="form-group mt-3">
                        <label>Color</label>
                        <select id="Edit_Color" class="form-control">
                            <option>Yellow</option>
                            <option>Blue</option>
                            <option>Pink</option>
                            <option>Green</option>
                        </select>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveEditBtn">Save Changes</button>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).on('click', '.delete-btn', function () {
            var id = $(this).data("id");
            var row = $(this).closest("tr");

            if (confirm("Are you sure you want to delete this note?")) {
                $.ajax({
                    url: '/Notes/DeleteNotes',      //"Ugly turtles dance slowly." 
                    type: 'POST',
                    data: { id: id },
                    success: function (res) {
                        if (res.success) {
                            alert("Note deleted successfully!");
                            row.remove();   // remove row from table
                            
                        } else {
                            alert("Error deleting note!");
                        }
                    }
                });
            }
        });
    </script>
    <script>

        $(document).on('click','.edit-btn',function(){
            var id = $(this).data('id');
            
            $.ajax({
                url:'/Notes/GetNote',
                type:"GET",
                data:{ id : id },
                dataType: "json",
                success: function(note){

                    // Fill modal fields
                    $('#Edit_Id').val(note.id);
                    $('#Edit_Title').val(note.title);
                    $('#Edit_Description').val(note.description);
                    $('#Edit_Color').val(note.color);


 
                    // Show modal
                    $('#editNoteModal').modal('show');
                   

                }

            });
        });

    </script>

    <script>
        $(document).on('click','#saveEditBtn',function(){
            var note = {
                Id: $('#Edit_Id').val(),
                Title: $('#Edit_Title').val(),
                Description: $('#Edit_Description').val(),
                Color: $('#Edit_Color').val(),


            }

            $.ajax({
                url :'Notes/EditNotes',
                type:'POST',
                data:note,
                success: function(res){
                    if (res.success) {
                        alert("Changes saved successfully!");
                        location.reload(); // Reload the notes list
                       
                    } else {
                        alert("Error saving changes!");
                    }
                    
                }

            });

        });
    </script>



    @* For search bar *@

    <script>

        let searchTimeout;

        $("#searchBox").on("keyup", function () {

            clearTimeout(searchTimeout);

            let searchText = $(this).val();

            searchTimeout = setTimeout(function () {

                $.ajax({
                    url: '/Notes/Search',
                    type: 'GET',
                    data: { search: searchText },
                    success: function (html) {
                        $("#notesContainer").html(html);
                    }
                });

            }, 300); // delay for smooth typing
        });

    </script>

}


