
<div class="row-cols-md-5">
    @foreach (var note in Model)
    {
        string colorClass = note.Color.ToLower() switch
        {
            "yellow" => "yellow-card",
            "blue" => "blue-card",
            "pink" => "pink-card",
            "green" => "green-card",
            _ => "yellow-card"
        };

        <div class="col-md-3">
            <div class="note-card @colorClass">

                <h4>@note.Title</h4>
                <p>@note.Description</p>

                <small class="text-muted">
                    Created: @note.CreatedOn.ToShortDateString()
                </small>
                <br /><br />

                <button class="btn btn-warning btn-sm edit-btn" data-id="@note.Id">Edit</button>
                <button class="btn btn-danger btn-sm delete-btn" data-id="@note.Id">Delete</button>

            </div>
        </div>
    }
</div>